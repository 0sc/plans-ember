<div class="ui text container">
  <h1 class="ui inverted header">
    PLANS that succeed
  </h1>
  <br />
  <div class="ui huge primary button" {{action 'openModal'}}>Get Started <i class="right arrow icon"></i></div>
  {{#ui-modal name="profile" class="profile"}}
  <i class="close icon"></i>
  <div class="header">
    Register
  </div>

  <div class="ui container segment basic">
    <form class="ui form">
      <div class="field">
        <label>Name</label>
        {{input value=model.name placeholder='Name'}}
      </div>
      <div class="field">
        <label>Email</label>
        {{input value=model.email placeholder='Email'}}
      </div>
      <div class="field">
        <label>password</label>
        {{input type='password' value=model.password}}
      </div>
      <div class="field">
        <div class="ui checkbox">
          {{input type='checkbox' checked=checked}}
          <label>I agree to the Terms and Conditions</label>
        </div>
      </div>
      <button class="ui button" type="submit" {{action 'register'}}>Submit</button>
    </form>
  </div>

  <div class="actions">
    <div class="ui positive right labeled icon button" {{action 'switchAction' preventDefault=true}}>
      {{alternateText}}
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
</div>
